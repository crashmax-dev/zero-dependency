{
  "name": "@zero-dependency/monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "dev": "turbo run dev --filter='./packages/*'",
    "build": "turbo run build --filter='./packages/*'",
    "test": "pnpm build && vitest run --coverage",
    "test:watch": "vitest --ui --watch --coverage",
    "format": "prettier --write --ignore-unknown **",
    "docs:dev": "turbo run dev --filter='./docs'",
    "docs:build": "turbo run build --filter='./docs'",
    "changeset": "changeset"
  },
  "devDependencies": {
    "@changesets/cli": "2.26.2",
    "@crashmax/prettier-config": "5.0.0",
    "@crashmax/tsconfig": "2.0.1",
    "@types/node": "20.8.10",
    "@vitest/coverage-v8": "0.34.6",
    "@vitest/ui": "0.34.6",
    "jsdom": "22.1.0",
    "react": "18.2.0",
    "tsx": "3.14.0",
    "turbo": "1.10.16",
    "typescript": "5.2.2",
    "vite": "4.5.0",
    "vite-plugin-dts": "3.6.3",
    "vitest": "0.34.6"
  }
}
