{
  "name": "@zero-dependency/monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "dev": "turbo run dev --filter='./packages/*'",
    "build": "turbo run build --filter='./packages/*'",
    "test": "pnpm build && vitest run --coverage",
    "test:watch": "vitest --ui --watch --coverage",
    "format": "prettier --write --ignore-unknown **",
    "docs:dev": "turbo run dev --filter='./docs'",
    "docs:build": "turbo run build --filter='./docs'"
  },
  "devDependencies": {
    "@crashmax/prettier-config": "3.2.1",
    "@crashmax/tsconfig": "2.0.1",
    "@types/node": "18.15.11",
    "@vitest/coverage-c8": "0.30.1",
    "@vitest/ui": "0.30.1",
    "jsdom": "21.1.1",
    "react": "18.2.0",
    "tsx": "3.12.6",
    "turbo": "1.9.1",
    "typescript": "5.0.4",
    "vite": "4.2.1",
    "vite-plugin-dts": "2.2.0",
    "vitest": "0.30.1"
  }
}
